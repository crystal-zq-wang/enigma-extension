{
  "manifest_version": 2,
"name": "enigma!",
"description": "enigma-configuring all your text",
"version": "1.0",
"content_scripts":[
    {
      "matches":[
        "https://www.yourhtmlsource.com/myfirstsite/myfirstpage.html"
      ],
      "js": ["content.js"]
    }
  ],
"browser_action": {
    "default_icon": "typewriter.png",
    "default_popup": "popup.html"
  },
"background": {
      "scripts": ["background.js"],
      "persistent": false
    },
"permissions": [
    "activeTab",
    "storage",
    "https://ajax.googleapis.com/"
  ]
}